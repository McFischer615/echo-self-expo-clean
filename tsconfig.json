{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react-native",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "styled-components-react-native",
      "react",
      "react-native"
    ]
  },
  "include": [
    "App.tsx",
    "src",
    "screens",
    "components"
  ],
  "exclude": [
    "node_modules",
    "public",
    "dist",
    "web"
  ]
}
